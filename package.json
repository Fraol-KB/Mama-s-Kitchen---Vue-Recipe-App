{
  "name": "recipe-app",
  "version": "1.0.0",
  "main": "server/server.js",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "lint-server": "eslint .",
    "start-backend": "node .",
    "posttest": "npm run lint",
    "serve-client": "cd client && vue-cli-service serve",
    "build-client": "cd client && vue-cli-service build --watch",
    "lint-client": "cd client && vue-cli-service lint",
    "nodemon-start": "nodemon",
    "start": "parallelshell 'npm run build-client' 'npm run nodemon-start'"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "compression": "^1.0.3",
    "cors": "^2.5.2",
    "formidable": "^1.2.1",
    "helmet": "^3.10.0",
    "loopback": "^3.22.0",
    "loopback-boot": "^2.6.5",
    "loopback-component-explorer": "^6.2.0",
    "loopback-component-storage": "^3.6.3",
    "loopback-connector-mongodb": "^5.0.0",
    "nodemon": "^1.19.1",
    "register-service-worker": "^1.6.2",
    "serve-favicon": "^2.0.1",
    "strong-error-handler": "^3.0.0",
    "typeface-roboto": "0.0.75",
    "vue": "^2.6.10",
    "vue-progressbar": "^0.7.5",
    "vue-router": "^3.0.3",
    "vue-social-sharing": "^2.4.6",
    "vuetify": "^2.0.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.9.0",
    "@vue/cli-plugin-eslint": "^3.9.0",
    "@vue/cli-plugin-pwa": "^3.9.0",
    "@vue/cli-service": "^3.9.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^4.18.2",
    "eslint-plugin-vue": "^5.0.0",
    "node-sass": "^4.9.0",
    "sass": "^1.17.4",
    "sass-loader": "^7.1.0",
    "vue-cli-plugin-vuetify": "^0.6.1",
    "vue-template-compiler": "^2.6.10",
    "vuetify-loader": "^1.2.2",
    "eslint-config-loopback": "^8.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "client/*"
    ],
    "delay": "2500"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "repository": {
    "type": "",
    "url": ""
  },
  "license": "UNLICENSED",
  "description": "recipe-app"
}
